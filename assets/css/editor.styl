// Meme editor styles

*
  box-sizing border-box
  // -webkit-user-select none

$base-letter-spacing = 0.05em
$canvas-size = 863

body
  background url(/img/bg-black.jpg)
  font-family 'knockout', Impact, sans-serif
  letter-spacing $base-letter-spacing

.hidden
  display none

.editor
  width ($canvas-size + 10px)
  margin 0 auto

  .button
    cursor pointer
    display inline-block
    background url(/img/button-bg.jpg) 100% 100%
    width (320/2)px
    height (115/2)px
    font-size 24px
    letter-spacing 0.05em
    line-height 0
    padding-top (@height/2)
    text-align center
    border-radius 4px
    color white
    text-transform uppercase

  .canvas-container
    display block
    margin 50px auto

    canvas
      // box-sizing content-box
      // border-style solid
      // border-color white
      // border-width 5px
      // border 5px solid white

  .editor-controls
    text-align center

    input[type=range]
      display block
      width 100%
      margin-bottom 20px

    label, input[type=radio]
      display inline

    input[type=radio]
      margin-left 25px

    input[type=file]
      display none

    label
      font-size 20px
      letter-spacing 1px
      color white
      text-transform uppercase

    input:checked + label
      color red

  .editor-types
    margin 20px 0