// Meme editor styles

*
  box-sizing border-box
  // -webkit-user-select none

canvas-size = 863

body
  background url(/img/bg-black.jpg)
  font-family 'knockout48', Impact, sans-serif

.hidden
  display none

.editor
  width (canvas-size + 10)px
  margin 0 auto

  .button
    cursor pointer
    display inline-block
    background url(/img/button-bg.jpg) 100% 100%
    width (320/2)px
    height (115/2)px
    font-size 24px
    line-height 0
    padding-top (@height/2)
    text-align center
    border-radius 4px
    color white
    text-transform uppercase

  .canvas-container
    display block
    margin 50px auto
    position relative

    canvas
      // border 5px solid white
      position absolute
      left 0
      top 0

  .editor-controls
    text-align center

    input[type=range]
      display block
      width 100%
      margin-bottom 20px

    label, input[type=radio]
      display inline

    input[type=radio]
      margin-left 25px

    input[type=file]
      display none

    label
      font-size 40px
      color white
      text-transform uppercase

    input:checked + label
      color red

  .editor-types
    margin 20px 0