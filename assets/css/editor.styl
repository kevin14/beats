// Meme editor styles

*
  box-sizing border-box

$base-letter-spacing = 0.05em
$canvas-size = 863px
$canvas-border = 5px

body
  background url(/img/bg-black.jpg)
  font-family 'knockout', Impact, sans-serif
  letter-spacing $base-letter-spacing

.hidden
  display none

.editor
  user-select none
  -webkit-user-select none

  width ($canvas-size + $canvas-border * 2)
  margin 50px auto

  .button
    cursor pointer
    display inline-block
    background url(/img/button-bg.jpg) 100% 100%
    width (320/2)px
    height (115/2)px
    font-size 24px
    letter-spacing 0.05em
    line-height 0
    padding-top (@height/2)
    text-align center
    border-radius 4px
    color white
    text-transform uppercase
    &:hover
      opacity 0.9
    &:active
      opacity 0.5

  .canvas-outer
    width: ($canvas-size + $canvas-border*2)
    height: @width
    padding: $canvas-border
    background-color: white
    margin: 0 auto


  .editor-controls
    margin-top 50px
    text-align center

    input[type=range]
      display block
      width 100%
      margin-bottom 20px

    label, input[type=radio]
      display inline

    input[type=radio]
      margin-left 25px

    input[type=file]
      display none

    label
      font-size 20px
      letter-spacing 1px
      color white
      text-transform uppercase

    input:checked + label
      color red

    .button
      margin 0 10px

  .editor-types
    margin 20px 0