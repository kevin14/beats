//rupture.scale = 0 500px 800px 1400px

$base-letter-spacing = 0.05em

html, body
  margin 0px
  padding 0px
  font-size 13px
  line-height 16px

  border 0px
  font-family 'knockout46_flyweight', Impact, sans-serif
  letter-spacing $base-letter-spacing

  background-color #000
  background-image url(/img/bg-black.jpg)
  background-repeat no-repeat
  background-position top center
  background-attachment fixed
  background-size cover

  @media (max-width: 500px)
    background-attachment scroll

#loader
  display none
  position fixed
  top 50%
  left 50%
  padding 10px
  background #000
  border 1px solid #999
  //margin-left (-@width/2)
  //margin-top (-@height/2)
  margin-left -23px
  margin-top -23px
  z-index 999

  img
    width 16px
    height 16px
    display block

#down
  position absolute
  bottom 20px
  right 15px
  z-index 999

  @media (max-width: 500px)
    display none
  //+at(1)
  //  display none

  img
    width 20px

#legal
  position absolute
  bottom 15px
  left 15px
  text-transform uppercase
  font-size 22px
  letter-spacing 2px
  z-index 998

  a
    text-decoration none
    padding-right 10px
    color #959595

    &:hover
      color #fff

  @media (max-width: 500px)
    font-size 18px


#theaters
  position absolute
  top 25px
  width 100%
  text-align center
  color #fff
  text-transform uppercase
  font-size 22px
  letter-spacing 2px
  z-index 998

  a
    text-decoration none
    color #fff
    display block

    &:hover
      color #f00


  @media (max-width: 500px)
    font-size 16px
    top 27px
    padding-right 10px
    text-align right


#sound-toggle
  position fixed
  z-index 9999
  top 25px
  right 15px
  color #fff
  text-decoration none
  text-transform uppercase
  font-size 22px
  letter-spacing 2px

  &:hover
    color #f00

#big-video-wrap
  display: none

#beats-logo
  position fixed
  top 15px
  left 15px
  z-index 999
  img
    width 35px

#editor-type-images
  background-color #000
  background-image url(/img/bg-black.jpg)
  background-repeat no-repeat
  background-position top center
  background-attachment fixed
  background-size cover
  width 100%
  height 100%

  .type-img

    width 100%
    height 100%
    background-repeat no-repeat
    background-position center center
    background-attachment fixed
    background-size cover

  .type-red
    display none
    width 100%
    height 100%
    background-color #f00

  .img1
    display none
    background-image url(/img/bg1.jpg)

  .img2
    display none
    background-image url(/img/bg2.jpg)

  .img3
    display none
    background-image url(/img/bg3.jpg)

  .img4
    display none
    background-image url(/img/bg4.jpg)

  .img5
    display none
    background-image url(/img/bg5.jpg)

#bottom
  background #000
  display none
  font-family: "knockout46_flyweight", sans-serif;
  letter-spacing 1px

  ul
    list-style none
    margin 0px
    padding 0px
    overflow hidden

    li
      float left
      position relative
      margin 0px
      padding 0px
      width 33.333333333333%
      overflow hidden

      .over
        opacity 0
        position absolute
        top 0px
        left 0px
        width 100%
        height 100%
        background-image url(/img/black.png)
        background-repeat no-repeat
        background-position top center
        background-size cover
        transition: .5s;

        .over-inner
          display table
          width 100%
          height 100%

          .over-cell
            display table-cell
            vertical-align middle

        h3
          font-size 32px
          letter-spacing 2px
          color red
          text-transform uppercase
          padding 40px 40px 20px 40px
          margin 0px

        p
          font-family "knockout48_featherweight"
          letter-spacing 1px
          color #fff
          font-size 18px
          line-height 26px
          padding 0px 40px 40px 40px
          margin 0px

      .video
        text-align center
        color #fff

        .play
          width 50px

        h3
          font-size 18px
          color #fff
          padding 10px 0px 0px 0px
          margin 0px

      .bg-img
        width 100%
        display block

      @media (max-width: 500px)
        width 100%

        .over
          position relative
          display block
          background #000
          opacity 1

        .video
          padding 30px
      @media (min-width: 501px) and (max-width: 800px)
        width 50%

      &:hover
        .over
          opacity 1

.editor-actions img
  height 45px
  @media (max-width: 500px)
    height 34px

.shareWindow
  display none
  background #000

.featherlight-content
  width 90%
  padding 0px !important
  border 0px !important
  overflow inherit !important

.featherlight-close-icon
  right -20px !important
  top -20px !important
  color #fff !important
  background none !important

  &:hover
    color #f00 !important

.video-container {
  position: relative;
  padding-bottom: 56.25%;
  padding-top: 30px;
  height: 0;
  overflow: hidden;
}

.video-container iframe,
.video-container object,
.video-container embed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.cf:before, .cf:after
  content " "
  display table

.cf:after
  clear both

.cf
  *zoom: 1
