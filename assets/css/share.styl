html, body
  margin 0px
  padding 0px
  font-family "Helvetica"
  width 100%/*
  height 100%
  overflow hidden*/

  background-color #000
  background-image url(/img/bg-black.jpg)
  background-repeat no-repeat
  background-position top center
  background-attachment fixed
  background-size cover

  @media (max-width: 500px)
    background-attachment scroll


#beats-logo
  position fixed
  top 15px
  left 15px
  z-index 999
  img
    width 35px


#share-body
  display table
  width 100%
  height 100%

  #share-inner
    display table-cell
    vertical-align middle
    text-align center
    margin 0 auto

    img
      width 500px
      height 500px

      @media (max-width: 500px)
        width 300px
        height 300px
