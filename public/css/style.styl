rupture.scale = 0 500px 800px 1400px

html, body
  margin 0px
  padding 0px
  font-size 13px
  line-height 16px

#big-video-wrap
  display: none


#beats-logo
  position fixed
  top 20px
  left 20px
  width 45px
  z-index 999

#top
  position relative
  background #eee
  width 100%

  #intro-video
    width 100%
    height 100%
    display none


  #city
    position absolute
    top 0px
    left 0px
    z-index 999
    width 400px
    height 429px
    +at(1)
      width 200px
      height 229px

    img
      position absolute
      width 100%

    input
      font-family: "knockout48", serif;
      position absolute
      top 307px
      bottom 2px
      background none
      color #fff
      width 100%
      border none
      font-size 92px
      outline none
      text-align center
      text-transform uppercase
      +at(1)
        font-size 32px
        top 155px


  #editor
    width 100%
    height 100%
    display none

    #down
      position absolute
      bottom 20px
      right 20px

      img
        width 25px

    #editor-type-images
        background-color #000
        background-image url(/img/bg-black.jpg)
        background-repeat no-repeat
        background-position top center
        background-attachment fixed
        -webkit-background-size cover
        -moz-background-size cover
        -o-background-size cover
        background-size cover
        width 100%
        height 100%

        .type-img

          width 100%
          height 100%
          background-repeat no-repeat
          background-position center center
          background-attachment fixed
          -webkit-background-size cover
          -moz-background-size cover
          -o-background-size cover
          background-size cover

        .type-red
          display none
          width 100%
          height 100%
          background-color #f00


        .img1
          display none
          background-image url(/img/bg1.jpg)

        .img2
          display none
          background-image url(/img/bg2.jpg)

        .img3
          display none
          background-image url(/img/bg3.jpg)

        .img4
          display none
          background-image url(/img/bg4.jpg)

        .img5
          display none
          background-image url(/img/bg5.jpg)
#bottom
  background #000
  display none

  ul
    list-style none
    margin 0px
    padding 0px

    li
      float left
      position relative
      margin 0px
      padding 0px
      width 33.333333333333%

      .over
        opacity 0
        position absolute
        top 0px
        left 0px
        width 100%
        height 100%
        background url(/img/black.png)

        -o-transition:.5s;
        -ms-transition:.5s;
        -moz-transition:.5s;
        -webkit-transition:.5s;
        /* ...and now for the proper property */
        transition:.5s;


        h3
          font-family "knockout48"
          color red
          text-transform uppercase
          padding 20px
          margin 0px

        p
          color #fff
          font-family "Helvetica Neue", "Arial", sans-serif;
          padding 0px 20px 20px 20px
          margin 0px

      img
        width 100%
        display block

      +at(1)
        width 100%

        .over
          position relative
          display block
          background #000
          opacity 1
      +at(2)
        width 50%


      &:hover
        .over
          opacity 1
