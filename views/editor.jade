extends layout

block head
  != css("editor")

block content
  .editor
    canvas#canvas(width="863", height="863")
    img.hidden#sample-logo(src="/img/editor/sample-logo.png")
    img.hidden#sample-photo(src="/img/editor/sample-photo.jpg")

    .editor-controls
      input(type="range", value=0.5, min=0, max=1, step=0.01)
      .editor-types
        input#control-image(type="radio", name="group", value="image")
        label(for="control-image") Image

        input#control-logo(type="radio", name="group", value="logo")
        label(for="control-logo") Logo

        input#control-grain(type="radio", name="group", value="grain")
        label(for="control-grain") Grain

        input#control-contrast(type="radio", name="group", value="contrast")
        label(for="control-contrast") Contrast


  != js("jquery/dist/jquery")
  != js("lodash/lodash")
  != js("fabric/dist/fabric")
  != js("editor")
