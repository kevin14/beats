extends layout

block content
  
  - var url = ""

  #top
    #theaters
      a(href="http://straightouttacompton.com", target="_blank") #{language.MOVIE_LINE}

    a#down
      img(src="/img/arrow-down.png") 
      
      
    #slides
      .slide.slide1(data-city="College Park")
      .slide.slide2(data-city="New York")
      .slide.slide3(data-city="Los Angeles")
      .slide.slide4(data-city="Chicago")

    .editor

      .canvas-outer
        canvas#canvas(width="846", height="846")
        //input.hide(width='846',height='846')
        img.hidden#img-logo-frame(src="/img/editor/logo-frame-2x.png")
        img.hidden#img-pattern-grime(src="/img/editor/pattern-grime.jpg")
        img.hidden#img-beats-watermark(src="/img/editor/beats-watermark-2x.png")
        img.hidden#img-bg(src="/img/bg-black-new.jpg")
        div.font-preloader
          span(style="font-family:'knockout'") FORCE FONT LOAD

      .editor-controls
        .editor-image-controls
          .editor-range-control
            .range
          form.editor-invert-control
            input#editor-invert-control-white(type="radio", name="invert", value="0", checked)
            label(for="editor-invert-control-white") #{language.WHITE}

            input#editor-invert-control-black(type="radio", name="invert", value="1")
            label(for="editor-invert-control-black") #{language.BLACK}

          form.editor-types
            input#control-photo(type="radio", name="group", value="photo")
            label(for="control-photo") #{language.IMAGE}

            input#control-contrast(type="radio", name="group", value="contrast")
            label(for="control-contrast") #{language.CONTRAST}

            input#control-invert(type="radio", name="group", value="invert")
            label(for="control-invert") #{language.LOGO_COLOR}

        form.editor-actions
          input#action-upload(type="file", accept="image/*")
          .button.upload 
            img(src="/img/icon-camera.png") 
            |#{language.ADD_PHOTO}
            //img(src="/img/btn-addphoto-big_cn.png")
              
          a.donthave(href="#") #{language.DONTHAVE}
          
          .button.share 
            img(src="/img/icon-share.png") 
            |#{language.SHARE}
            //img(src="#{url}/img/btn-share_cn.png")
          .button.download 
            img(src="/img/icon-download.png") 
            |#{language.DOWNLOAD}
            //img(src="#{url}/img/btn-download_cn.png")
          .button.restart(href="/?skip=1") 
            img(src="/img/icon-restart.png") 
            |#{language.START_OVER}
            //img(src="#{url}/img/btn-restart2_cn.png")

      #share-popup-src.share-popup
        a.close
        a.button.weibo(href="#", target="share", data-text="I'm #StraightOutta {CITY}. Where you from? #BeatsByDre", data-popwidth="550", data-popheight="420")
          img(src="#{url}/img/btn-weibo_cn.png", height="45")
        //a.button.twitter(href="#", target="share", data-text="I'm #StraightOutta {CITY}. Where you from? #BeatsByDre", data-popwidth="550", data-popheight="420")
          img(src="#{url}/img/btn-twitter.png", height="45")
        //a.button.facebook(href="#", target="share", data-popwidth="555", data-popheight="355")
          img(src="#{url}/img/btn-facebook.png", height="45")

  #bottom
    ul.cf
      if posts
        each post in posts
          li
            if post.type == "video"
              a.video-link(href="#", data-video="#{post.videoId}")
                img.bg-img(src="#{post.photo}")
                .over
                  .over-inner
                    .over-cell.video
                      img.play(src="/img/play.png")
                      h3!= post.title
            else
              img.bg-img(src="#{post.photo}")
              if post.title 
                .over
                  .over-inner
                    .over-cell
                      h3!= post.title
                      p!= post.text

  #legal
    a(href="#{language.PRIVACY_URL}", target="_blank") #{language.PRIVACY}
    a(href="#{language.TERMS_URL}", target="_blank") #{language.TERMS}

  a#beats-logo(href="http://beatsbydre.com")
    img(src="#{url}/img/beats-logo.png")

  #loader
    img(src="#{url}/img/loader.gif")
      
