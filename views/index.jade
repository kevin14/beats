extends layout

block content
  img#beats-logo(src="/img/beats-logo.png")
  #top
    #city-holder
      #city
        img#logo(src="/img/straight-logo.png")
        input(type="text")
          
      #lower
        img#beats-logo-white(src="/img/beats-logo-white.png")
          
        #buttons
          a#btn-download(href="#")
            img(src="/img/btn-download.png", height="45")
          a#btn-share(href="#")
            img(src="/img/btn-share.png", height="45")
          a#btn-addphoto(href="#")
            img(src="/img/btn-addphoto.png", height="45")
        #buttons-hide
          img(src="/img/btn-download-over.png", height="45")
          img(src="/img/btn-share-over.png", height="45")
          img(src="/img/btn-addphoto-over.png", height="45")
          
              
    #intro-video
      #slides
        .slide.slide1(data-city="Chicago")
        .slide.slide2(data-city="Brooklyn")
        .slide.slide3(data-city="Oakland")
    #editor
      a#down
        img(src="/img/arrow-down.png")
      
      #editor-type-images
        .type-red
        .type-img.img1
        .type-img.img2
        .type-img.img3
        .type-img.img4
        .type-img.img5
  
  #bottom
    ul
      each post in posts
        li
          img(src="#{post.photo}")
          .over
            h3 #{post.title}
            p #{post.text}
            
  .share
    a(href="#") twitter
    a(href="#") facebook  

  script(src="/js/bower_components/jquery/dist/jquery.min.js")
  script(src="/js/bower_components/slick-carousel/slick/slick.min.js")
  script(src="/js/bower_components/featherlight/release/featherlight.min.js")
  script(src="/js/jquery.inputfit.js")
  script(src='/js/app.js')
